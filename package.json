{
  "name": "leaflet-atproto-blog",
  "version": "1.0.0",
  "description": "A minimalist blogging platform built on ATProto using the Leaflet lexicon",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch server --ext ts,tsx --exec \"node --experimental-strip-types server/index.ts\"",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "node scripts/build-server.js",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.server.json --noEmit",
    "start": "NODE_ENV=production node dist/server/index.js",
    "preview": "npm run build && npm run start",
    "db:reset": "node --experimental-strip-types server/database/setup.ts",
    "db:reset:all": "node --experimental-strip-types server/database/setup.ts --all",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:coverage": "c8 ava",
    "test:unit": "ava server/database/index.test.ts server/services/renderer.test.ts",
    "test:integration": "ava server/integration.test.ts server/routes/routes.test.ts"
  },
  "keywords": [
    "atproto",
    "bluesky",
    "leaflet",
    "blog"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "^0.14.1",
    "@atproto/oauth-client-node": "^0.3.15",
    "@hono/node-server": "^1.13.7",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.3",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.3",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.5",
    "better-sqlite3": "^11.8.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "hono": "^4.6.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "ava": "^6.1.1",
    "c8": "^9.1.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  }
}
