{
  "name": "leaflet-atproto-blog",
  "version": "1.0.0",
  "description": "A minimalist blogging platform built on ATProto using the Leaflet lexicon",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "tsx src/database/setup.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/database src/services/renderer.test.ts",
    "test:integration": "vitest run src/integration.test.ts src/routes/routes.test.ts"
  },
  "keywords": [
    "atproto",
    "bluesky",
    "leaflet",
    "blog"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "^0.14.1",
    "better-sqlite3": "^11.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^4.0.16",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
